{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    // "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5",
  },
  "include": ["src", "types", "**/*.ts", "**/*.tsx", "*.jss.js", "custom.d.ts", "rollup.config.mjs"],
  //   "exclude": ["node_modules", "build", "src/stories", "**/*.stories.tsx", "**/*.js", "**/*.jsx", "**/*.jss.js"],

}


